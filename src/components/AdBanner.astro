---
// Add props to make the component more flexible
interface Props {
  adSlot?: string;
  adFormat?: string;
  responsive?: boolean;
}

const { 
  adSlot = "1234567890", // Replace with your actual ad slot ID
  adFormat = "auto",
  responsive = true 
} = Astro.props;
---

<div class="ad-container my-4">
  <ins class="adsbygoogle"
       style="display:block"
       data-ad-client="ca-pub-6082615069657035"
       data-ad-slot={adSlot}
       data-ad-format={adFormat}
       data-full-width-responsive={responsive}></ins>
  <script is:inline>
       (adsbygoogle = window.adsbygoogle || []).push({});
  </script>
</div>