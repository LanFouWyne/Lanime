---
interface Props {
  slot: string;
  format?: "auto" | "rectangle" | "horizontal" | "vertical";
  className?: string;
}

const { slot, format = "auto", className = "" } = Astro.props;
---

<div class={`ad-container ${className}`}>
  <ins
    class="adsbygoogle"
    style="display:block"
    data-ad-client="ca-pub-6082615069657035" 
    data-ad-slot={slot}
    data-ad-format={format}
    data-full-width-responsive="true"
  ></ins>
  <script is:inline>
    (adsbygoogle = window.adsbygoogle || []).push({});
  </script>
</div>

<style>
  .ad-container {
    width: 100%;
    margin: 1rem 0;
    overflow: hidden;
    text-align: center;
  }
</style>